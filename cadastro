<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Instituto Esperança - Cadastro</title>
  <link rel="stylesheet" href="assets/css/style.css">
  <script>
    // Máscaras simples
    function mascaraCPF(i){
      var v = i.value.replace(/\D/g,'');
      v = v.replace(/(\d{3})(\d)/,'$1.$2');
      v = v.replace(/(\d{3})(\d)/,'$1.$2');
      v = v.replace(/(\d{3})(\d{1,2})$/,'$1-$2');
      i.value = v;
    }

    function mascaraTel(i){
      var v = i.value.replace(/\D/g,'');
      v = v.replace(/^(\d\d)(\d)/g,"($1) $2");
      v = v.replace(/(\d{5})(\d)/,"$1-$2");
      i.value = v;
    }

    function mascaraCEP(i){
      var v = i.value.replace(/\D/g,'');
      v = v.replace(/^(\d{5})(\d)/,"$1-$2");
      i.value = v;
    }
  </script>
</head>
<body>
  <header>
    <h1>Cadastro de Voluntárias e Doações</h1>
    <nav>
      <ul>
        <li><a href="index.html">Início</a></li>
        <li><a href="projetos.html">Projetos</a></li>
        <li><a href="cadastro.html">Cadastro</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <form>
      <fieldset>
        <legend>Dados Pessoais</legend>

        <label>Nome Completo:</label>
        <input type="text" name="nome" placeholder="Digite seu nome" required>

        <label>E-mail:</label>
        <input type="email" name="email" placeholder="Digite seu e-mail" required>

        <label>CPF:</label>
        <input type="text" name="cpf" maxlength="14" oninput="mascaraCPF(this)" required>

        <label>Telefone:</label>
        <input type="tel" name="telefone" maxlength="15" oninput="mascaraTel(this)" required>

        <label>Data de Nascimento:</label>
        <input type="date" name="nascimento" required>
      </fieldset>

      <fieldset>
        <legend>Endereço</legend>

        <label>Endereço:</label>
        <input type="text" name="endereco" required>

        <label>CEP:</label>
        <input type="text" name="cep" maxlength="9" oninput="mascaraCEP(this)" required>

        <label>Cidade:</label>
        <input type="text" name="cidade" required>

        <label>Estado:</label>
        <input type="text" name="estado" maxlength="2" placeholder="UF" required>
      </fieldset>

      <button type="submit">Enviar Cadastro</button>
    </form>
  </main>

  <footer>
    <p>&copy; 2025 Instituto Esperança. Todos os direitos reservados.</p>
  </footer>
